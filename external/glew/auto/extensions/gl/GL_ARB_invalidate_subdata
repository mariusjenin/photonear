GL_ARB_invalidate_subdata
http://www.opengl.org/registry/specs/ARB/invalidate_subdata.txt
GL_ARB_invalidate_subdata
	void glInvalidateBufferData (GLuint buffer)
	void glInvalidateBufferSubData (GLuint buffer, GLintptr offset, GLsizeiptr length)
	void glInvalidateFramebuffer (GLenum target, GLsizei numAttachments, const GLenum* attachments)
	void glInvalidateSubFramebuffer (GLenum target, GLsizei numAttachments, const GLenum* attachments, GLint x, GLint y, GLsizei m_width, GLsizei m_height)
	void glInvalidateTexImage (GLuint texture, GLint level)
	void glInvalidateTexSubImage (GLuint texture, GLint level, GLint xoffset, GLint yoffset, GLint zoffset, GLsizei m_width, GLsizei m_height, GLsizei depth)
